        <style>
        .navbar-full, .navbar {
          margin-left: 200px;
          box-shadow: 5px 5px 5px #888888;
        }
        .sidenav {
          box-shadow: 10px 10px 18px #888888;
        }

        .sidenav, .a {
          color: white;
    text-shadow: 0.2px 0.2px 3px #888888;


        }

        .error{
    			color: red;
    			margin-left: 10px;
    		}

        .valid{
    			color: red;
    			margin-left: 10px;
    		}

    		input.invalid, textarea.invalid{
    			border: 2px solid red;
    		}

    		input.valid, textarea.valid{
    			border: 2px solid green;
    		}

        .side{
          width: 30%;
          height: 30%;
          position: relative;
        }

        .side:hover{
          width: 35%;
          height: 35%;
          opacity: 0.6;
          transform: rotate(20deg);
          transition: .3s ease;
        }

        .side:hover .overlay{
          width: 100%;
          left: 0;

        }

        #overlay {
          position: fixed;
          display: none;
          width: 100%;
          height: 100%;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background-color: rgba(0,0,0,0.5);
          z-index: 2;
          cursor: pointer;
      }

      #text{
          position: absolute;
          top: 50%;
          left: 50%;
          font-size: 50px;
          color: white;
          transform: translate(-50%,-50%);
          -ms-transform: translate(-50%,-50%);
      }

      #wrapper .text {
        position:relative;
        bottom:0px;
        padding-top: 0px;
        left:22px;
        visibility:hidden;
      }

        #wrapper:hover .text {
        visibility:visible;
        transition: .3s ease;
        }
        </style>
  </head>





