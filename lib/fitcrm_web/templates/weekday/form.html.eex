<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :breakfast, class: "control-label" %>
    <%= number_input f, :breakfast, class: "form-control" %>
    <%= error_tag f, :breakfast %>
  </div>

  <div class="form-group">
    <%= label f, :day, class: "control-label" %>
    <%= text_input f, :day, class: "form-control" %>
    <%= error_tag f, :day %>
  </div>

  <div class="form-group">
    <%= label f, :lunch, class: "control-label" %>
    <%= number_input f, :lunch, class: "form-control" %>
    <%= error_tag f, :lunch %>
  </div>

  <div class="form-group">
    <%= label f, :dinner, class: "control-label" %>
    <%= number_input f, :dinner, class: "form-control" %>
    <%= error_tag f, :dinner %>
  </div>

  <div class="form-group">
    <%= label f, :excercises, class: "control-label" %>
    <%= number_input f, :excercises, class: "form-control" %>
    <%= error_tag f, :excercises %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
